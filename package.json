{
  "name": "scribecat",
  "version": "1.6.2",
  "description": "ScribeCat scribes and is cat - Desktop app for audio transcription and note-taking",
  "main": "dist/main/main.js",
  "homepage": ".",
  "scripts": {
    "start": "electron . --no-sandbox",
    "build": "vite build",
    "dev": "vite",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "server": "node server.js",
    "dev:full": "concurrently \"npm run server\" \"npm run dev\"",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "dist": "npm run build && electron-builder --publish=never",
    "pack": "npm run build && electron-builder --dir",
    "test": "npm run type-check && vitest run",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run --reporter=verbose",
    "test:integration": "vitest run --reporter=verbose src/**/*.integration.test.ts",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "npm run test:coverage && npm run test:e2e",
    "test:legacy": "node test/smoke-test.js && node test/renderer-functions.test.js && node test/error-monitoring.test.js && node test/e2e-boot.test.js"
  },
  "keywords": [
    "electron",
    "transcription",
    "notes",
    "audio",
    "desktop"
  ],
  "author": "ScribeCat Team",
  "license": "ISC",
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/electron": "^1.4.38",
    "@types/node": "^24.6.0",
    "@vitest/ui": "^3.2.4",
    "concurrently": "^9.2.1",
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12",
    "jsdom": "^24.1.0",
    "msw": "^2.11.3",
    "playwright": "^1.55.1",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.2",
    "vite": "^7.1.7",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.64.0",
    "@firebase/auth": "^1.11.0",
    "@firebase/firestore": "^4.9.2",
    "axios": "^1.12.2",
    "cheerio": "^1.1.2",
    "cors": "^2.8.5",
    "docx": "^9.5.1",
    "dotenv": "^17.2.2",
    "electron-store": "^10.1.0",
    "express": "^5.1.0",
    "firebase": "^12.3.0",
    "keytar": "^7.9.0",
    "node-fetch": "^2.7.0",
    "ws": "^8.18.3"
  },
  "build": {
    "appId": "com.scribecat.app",
    "productName": "ScribeCat",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
